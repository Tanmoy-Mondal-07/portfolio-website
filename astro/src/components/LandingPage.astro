---
import { Image } from "astro:assets";
import profilepic from "../../public/profilepic.png";
import Particles from "./Particles.astro";

const navItems = [
  { name: "Home", href: "#home" },
  { name: "Projects", href: "#projects" },
  { name: "Skills", href: "#skills" },
  { name: "About", href: "#about" },
  { name: "Contact", href: "#contactForm" },
];
---

<!-- NAVBAR -->
<nav class="fixed top-0 left-0 w-full z-50 backdrop-blur bg-white/70 border-b border-zinc-200">
  <div class="max-w-6xl mx-auto px-6 h-16 flex items-center justify-between">
    <span class="font-semibold text-zinc-800">Tanmoy Mondal</span>

    <ul class="hidden md:flex items-center gap-6 text-sm text-zinc-600">
      {navItems.map(item => (
        <li>
          <a
            href={item.href}
            class="hover:text-zinc-900 transition-colors"
          >
            {item.name}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<section
  id="home"
  class="relative bg-white min-h-screen flex items-center justify-center pt-20 overflow-hidden"
>
  <!-- Particles background -->
  <div class="absolute inset-0 z-10">
    <Particles />
  </div>

  <div class="z-10 text-center max-w-4xl px-4 animate-fadeIn">
    <!-- Profile Picture -->
    <div class="mx-auto mb-8 animate-slideUp">
      <div class="w-40 h-40 md:w-48 md:h-48 mx-auto rounded-full bg-gray-200 p-1 shadow-lg">
        <div class="w-full h-full rounded-full overflow-hidden bg-white">
          <Image
            src={profilepic}
            alt="User profile photo of Tanmoy Mondal"
            width="200"
            height="200"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>

    <!-- Title -->
    <h1 class="mb-4 text-4xl md:text-6xl font-extrabold animate-slideUp delay-200">
      <span class="bg-gradient-to-r from-zinc-700 to-zinc-900 bg-clip-text text-transparent">
        Full Stack Developer
      </span>
    </h1>

    <p class="mx-auto mb-10 max-w-xl text-lg md:text-xl text-zinc-500 font-light animate-slideUp delay-300">
      Software Engineer crafting
      <span class="text-zinc-900 font-normal">
        refined digital experiences
      </span>
      through thoughtful full-stack development.
    </p>

    <!-- Buttons -->
    <div class="flex flex-col sm:flex-row justify-center items-center gap-6 animate-slideUp delay-400">
      <a
        href="https://github.com/Tanmoy-Mondal-07"
        class="inline-flex items-center gap-2 min-w-44 rounded-full bg-zinc-800 px-6 py-3 text-white font-medium shadow-md hover:shadow-lg transition hover:scale-105"
      >
        <i class="fa-brands fa-github text-xl"></i>
        View Github
      </a>

      <a
        href="#contactForm"
        class="inline-flex items-center min-w-44 gap-2 rounded-full px-6 py-3 font-medium text-zinc-700 border border-zinc-300 hover:text-zinc-900 hover:shadow-lg transition hover:scale-105"
      >
        <i class="fa-solid fa-paper-plane text-sm"></i>
        Contact Me
      </a>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-10 left-1/2 -translate-x-1/2">
      <div class="h-12 w-px bg-gradient-to-b from-zinc-200 to-transparent overflow-hidden">
        <div class="h-1/2 bg-zinc-800 animate-scroll-line"></div>
      </div>
    </div>
  </div>
</section>

<style>
@keyframes scroll-line {
  0% { transform: translateY(-100%); }
  100% { transform: translateY(200%); }
}
.animate-scroll-line {
  animation: scroll-line 2.5s cubic-bezier(0.15, 0, 0.5, 1) infinite;
}
</style>