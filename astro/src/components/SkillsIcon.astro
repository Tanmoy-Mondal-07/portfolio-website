<div id="skills" class="min-h-screen bg-white container mx-auto pb-20 relative">
<div class="text-center my-10 mb-15">
            <h2 class="text-4xl font-bold text-gray-900">
                <span
                    class="bg-gradient-to-r from-zinc-700 to-zinc-900 bg-clip-text text-transparent"
                >
                    Skills
                </span>
            </h2>
            <div class="w-24 h-1 bg-zinc-800 mx-auto mt-4 rounded-full"></div>
        </div>
  <div class="flex items-center justify-center">
  
    <ul class="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-4 gap-10">

    {skillData.map(skill => (
      <li class="relative list-none" style={`hover:--color:${skill.color}`}>
        <a
          class="relative flex items-center justify-center
               w-40 h-25 bg-white
               -rotate-0 skew-y-0
               shadow-[-15px_15px_10px_rgba(0,0,0,0.3)]
               transition-all duration-500
               hover:translate-x-3 hover:-translate-y-3
               hover:shadow-[-35px_35px_40px_rgba(0,0,0,0.4)]
               group"
      >
        <!-- LEFT SIDE -->
        <span
          class="absolute top-2 left-[-14px] w-3 h-full bg-[#b1b1b1] skew-y-[-40deg]"
        ></span>

        <!-- BOTTOM SIDE -->
        <span
          class="absolute bottom-[-14px] left-[-7px] w-full h-3 bg-[#b1b1b1] skew-x-[-40deg]"
        ></span>

          <!-- ICON -->
          <img
            src={skill.icon}
            alt={skill.name}
            class="w-12 h-12 transition-all duration-500 group-hover:scale-110"
            // style="filter: drop-shadow(0 0 6px rgba(0,0,0,0.3));"
            loading="lazy"
          />
          <h1 class="pl-5">{skill.name}</h1>
        </a>
      </li>
    ))}

  </ul>
